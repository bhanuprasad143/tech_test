.span3
  %h3 Countries
  %ul.nav.nav-list
    %li.nav-header Visited Countries list
    - if current_user.visits.blank?
      %li You haven't has any visited country
    ~ form_tag user_update_visit_path do
      - current_user.visits.each do |c|
        %li
          = check_box_tag "countries[]", c[0], current_user.visit?(c[0]) ? true : false
          = c[0]
    %li.nav-header Unvisited Countries
    %li select coutry to add to visited list
    ~ form_tag user_update_visit_path do
      = select_tag :country, options_for_select(@unvisits)
      = submit_tag "Set Visited"

.span.span9
  %h3 Countries & Currencies Table
  .country-table.span9.no-lmargin
    = render :partial => 'countries_list', :locals => {:sort_type => 'desc', :sort_field => 0}
